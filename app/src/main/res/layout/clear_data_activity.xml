<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/public_edit_bg"
            android:orientation="vertical" >


            <TextView
                android:id="@+id/clear_pic_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/public_btn_press_bottom"
                android:gravity="center"
                android:padding="12dp"
                android:text="清除图片缓存"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
            
             <include layout="@layout/public_line_1" />

            <TextView
                android:id="@+id/clear_doc_data"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/public_btn_press_bottom"
                android:gravity="center"
                android:padding="12dp"
                android:text="清除文件缓存"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/public_edit_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/clear_cancle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/public_btn_press"
                android:gravity="center"
                android:padding="12dp"
                android:text="取  消"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>